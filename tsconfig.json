{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "es2018", "es5"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/screens/*": ["screens/*"],
      "@/services/*": ["services/*"],
      "@/store": ["store/index"],
      "@/store/*": ["store/*"],
      "@/navigation": ["navigation/index"],
      "@/navigation/*": ["navigation/*"],
      "@/utils/*": ["utils/*"],
      "@/types": ["types/index"],
      "@/types/*": ["types/*"]
    }
  },
  "include": [
    "src/**/*",
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}